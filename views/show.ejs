<div class="row">
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="<%= wine.img %>" alt="" class="img-responsive">
            <div class="caption">
                <h3><%= wine.name %></h3>
                <p class="description"><%= wine.description %></p>
                <div class="clearfix">
                    <div><%= wine.price %></div>
                    <div >
                        <% if (wine.qty > 0) { %>
                            <p>
                                <%= wine.qty %> in stock 
                            </p>
                            <form class="float-end" action="/wine/<%= wine.id %>/show?_method=PUT" method="POST"><input type="submit" value="Buy"></form>
                            <% } else { %>
                             <p>Out of stock</p>
                        
                        <% } %>

                    </div>

                    <a href="/wine/<%= wine.id %>/edit" class="btn btn-outline-primary float-end" role="button">Edit</a>
                </div>
            </div>
            <div class ="delete-form float-end">
                <form style = "text-align: center;" action="/wine/<%= wine.id %>?_method=DELETE" method="POST"><input type="submit" value="Delete"></form>
            </div>