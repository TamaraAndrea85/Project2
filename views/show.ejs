<div class="heading">Sneakers</div>
<body class="show">

    <div class="sneaker-card">
      <h1><%= sneaker.name%></h1>
      <h2><%= sneaker.brand %></h2>
      <div class="sneaker-pic">
          <img src="<%= sneaker.img%>" alt="picture of a sneaker">
        </div>
          
        
        <div class="sneaker-info">
          <div class="sneaker-colorway">
              <h2><%= sneaker.colorWay %></h2>
            </div>
        <div class="sneaker-size">
        <h2><%= sneaker.size %></h2>
        </div>
        <% if (sneaker.worn > 0) { %>
            <h2>Worn: <%= sneaker.worn %>. I have worn these</h2>
               <% } else { %>
                    <h2>Need to wear</h2>
                    <% } %>
        
      </div>
      <a class="edit-link" href="/sneaker/<%= sneaker.id %>/edit">Edit this sneaker</a>
      <form style = "text-align:center; font-size: 20px;" action="/sneaker/<%=sneaker.id%>?_method=DELETE" method="POST"><input type="submit" value="DELETE"></form>
    </div>

  </body>
            
          
      
      
        

        
      
    
        
   

        

    

    
               
     
        
    
    
      

 
    

